<ul class="nav nav-pills nav-justified">
  <li role="presentation"><%=link_to "Home", root_path, class: "index"%></li>
  <li role="presentation"><%=link_to "Projects", website_projects_path, class: "projects"%></li>
  <li role="presentation"><%=link_to "About", website_about_path, class: "about"%></li>
  <li role="presentation"><%=link_to "Contact", website_contact_path, class: "contact"%></li>
